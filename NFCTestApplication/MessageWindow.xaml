<Window x:Class="NFCTestApplication.MessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NFCTestApplication"
        mc:Ignorable="d"
        Title="MessageWindow" Height="200" Width="400" WindowStartupLocation="CenterScreen" Topmost="True">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0" />
            <RowDefinition Height="*" />
            <RowDefinition Height="10" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="1" Grid.Column="1" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="messageBox" TextWrapping="Wrap"/>
        <Button Grid.Row="1" Grid.Column="1" Width="38" Height="25" Content="Ok" x:Name="btnOk"  HorizontalAlignment="Right" VerticalAlignment="Top" Background="#ff5452" Margin="0,136,0,0" Grid.RowSpan="2" Click="btnOk_Click"/>
    </Grid>
</Window>
